{
  "manifest_version": 3,
  "name": "Multi Search Engine Widget",
  "version": "1.0",
  "description": "Add a floating search engine switcher to search results pages.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search*",
        "*://*.bing.com/*",
        "*://*.duckduckgo.com/*",
        "*://*.yandex.com/search*",
        "*://*.yandex.ru/search*",
        "*://ya.ru/search*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
